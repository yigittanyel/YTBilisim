@using BeeBilisim.Web.Models
@model List<AnasayfaModel>
@{
    Layout = "";

}

<br>
<h2 class="text-center">NEDEN BİZ SAYFASI BİLGİLERİ</h2>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Neden Biz Metni</th>
            <th scope="col">Neden Biz Sol Taraf 1. Madde</th>
            <th scope="col">Neden Biz Sol Taraf 2. Madde</th>
            <th scope="col">Neden Biz Sol Taraf 3. Madde</th>
            <th scope="col">Neden Biz Sağ Taraf 1. Madde</th>
            <th scope="col">Neden Biz Sağ Taraf 2. Madde</th>
            <th scope="col">Neden Biz Sağ Taraf 3. Madde</th>
            <th scope="col">Neden Biz Sağ Taraf 4. Madde</th>

            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.NedenBizMetin</td>
                <td>@x.NedenBizSol1</td>
                <td>@x.NedenBizSol2</td>
                <td>@x.NedenBizSol3</td>
                <td>@x.NedenBizSag1</td>
                <td>@x.NedenBizSag2</td>
                <td>@x.NedenBizSag3</td>
                <td>@x.NedenBizSag4</td>
                <td><a href="/AdminPanel/NedenBizGetir/@x.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

