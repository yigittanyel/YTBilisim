@model BeeBilisim.Web.Models.HakkimizdaModel
@using System.Security.Claims
@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor httpContextAccessor
@{
    ViewData["Title"] = "BizKimizGetir";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
    string displayName = httpContextAccessor.HttpContext.User.FindFirst(ClaimTypes.Email).Value;

}


<h2 class="text-center">BİZ KİMİZ KISMI BİLGİSİ</h2>
@using (Html.BeginForm("BizKimizGuncelle", "AdminPanel", FormMethod.Post))
{
    <div class="padding:10px;">
        @Html.HiddenFor(x => x.Id)
        <div>
            <label>Metin 1 (Sol): </label><br />
            @Html.TextBoxFor(q => q.BizKimizMetin1, new { @class = "form-control" })
        </div>
        <div>
            <label>Metin 2 (Sağ) </label><br />
            @Html.TextBoxFor(q => q.BizKimizMetin2, new { @class = "form-control" })
        </div>
        <div>
            <input type="hidden" name="LastupUser" value="@displayName">
        </div>
        <div style="margin-top:15px;">
            <button class="btn btn-info">Güncelle</button>
        </div>
    </div>
}


