	<!-- //google fonts -->
	
</head>
<body>

<div class="signupform">
	<div class="container">
		<!-- main content -->
		<div class="agile_info">
			<div class="w3l_form">
				<div class="left_grid_info">
					<h1 style="text-align:center;">ADMİN KONTROL PANELİ GİRİŞİ</h1>
						<img src="~/web/images/image.jpg" alt="" />
				</div>
			</div>
			<div class="w3_info">
				<h2>GİRİŞ YAPIN</h2>
				<form action="#" method="post">
					<label>Email Adresi</label>
					<div class="input-group">
						<span class="fa fa-envelope" aria-hidden="true"></span>
						<input type="email" placeholder="Email adresini giriniz:" required="" name="Email"> 
					</div>
					<label>Şifre</label>
					<div class="input-group">
						<span class="fa fa-lock" aria-hidden="true"></span>
							<input type="Password" placeholder="Şifrenizi giriniz:" required="" name="Sifre">
					</div> 
@*					<div class="login-check">
						 <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Remember me</label>
					</div>	*@					
						<button class="btn btn-danger btn-block" type="submit">GİRİŞ</button >                
				</form>
			</div>
		</div>
		<!-- //main content -->
	</div>
</div>
	
</body>
</html>


